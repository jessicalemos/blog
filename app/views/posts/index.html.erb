<h1>Posts</h1>

<% @posts.each do |post| %>
  <article>
    <h2><%= post.title %></h2>
    <% post.body&.lines&.each do |line| %>
      <p><%= line %></p>
    <% end %>
    <footer>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Destroy", post, method: :delete %>
    </footer>
  </article>
<% end %>

<% if @posts.empty? %>
  <p><em>There are no posts</em></p>
<% end %>

